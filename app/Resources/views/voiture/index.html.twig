{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voitures list</h1>
    {{ form_start (form)}}
    {{ form_widget (form)}}
    <input type="submit" value="Rechercher" />
    {{ form_end(form)}}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Serie</th>
                <th>Datemisecirculation</th>
                <th>Marque</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td><a href="{{ path('voiture_show', { 'id': voiture.id }) }}">{{ voiture.id }}</a></td>
                <td>{{ voiture.serie }}</td>
                <td>{{ voiture.dateMiseCirculation }}</td>
                <td>{{ voiture.marque }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('voiture_show', { 'id': voiture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voiture_new') }}">Create a new voiture</a>
        </li>
    </ul>
{% endblock %}
